<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/material_default_spacing">

        <ImageView
            android:id="@+id/image_cast_profile"
            android:layout_width="50dp"
            android:layout_height="75dp"
            android:padding="4dp"
            android:scaleType="centerCrop"
            android:src="@drawable/tatum" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/material_default_spacing"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_cast_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/not_available_placeholder" />

            <TextView
                android:id="@+id/text_cast_character"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/not_available_placeholder"
                android:textColor="@android:color/darker_gray" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>