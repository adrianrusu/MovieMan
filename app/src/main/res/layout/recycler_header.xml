<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <TextView
        android:id="@+id/text_movie_tagline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="@dimen/material_default_spacing"
        android:textSize="@dimen/abc_text_size_title_material" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/material_default_spacing">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/movie_duration_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="Duration"
                android:textColor="@android:color/darker_gray" />

            <TextView
                android:id="@+id/text_movie_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/movie_duration_label"
                android:paddingLeft="@dimen/material_default_spacing"
                android:text="@string/not_available_placeholder" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true">

            <TextView
                android:id="@+id/text_movie_homepage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:paddingLeft="@dimen/material_default_spacing" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/material_default_spacing">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/movie_budget_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="Budget"
                android:textColor="@android:color/darker_gray" />

            <TextView
                android:id="@+id/text_movie_budget"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/movie_duration_label"
                android:paddingLeft="@dimen/material_default_spacing"
                android:text="@string/not_available_placeholder" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true">

            <TextView
                android:id="@+id/movie_revenue_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Revenue"
                android:textColor="@android:color/darker_gray" />

            <TextView
                android:id="@+id/text_movie_revenue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:paddingLeft="@dimen/material_default_spacing"
                android:text="@string/not_available_placeholder" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/material_default_spacing">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Status"
                android:textColor="@android:color/darker_gray" />

            <TextView
                android:id="@+id/text_movie_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/not_available_placeholder" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="right"
            android:orientation="vertical">

            <TextView
                android:id="@+id/movie_directed_by_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Directed by"
                android:textColor="@android:color/darker_gray" />

            <TextView
                android:id="@+id/text_movie_directed_by"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:paddingLeft="@dimen/material_default_spacing"
                android:text="@string/not_available_placeholder" />
        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/material_default_spacing"
        android:text="Genres"
        android:textColor="@android:color/darker_gray" />

    <TextView
        android:id="@+id/text_movie_genres"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/not_available_placeholder" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/material_default_spacing"
        android:text="Overview"
        android:textColor="@android:color/darker_gray" />

    <TextView
        android:id="@+id/text_movie_overview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/not_available_placeholder" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/material_default_spacing"
        android:text="Production companies"
        android:textColor="@android:color/darker_gray" />

    <TextView
        android:id="@+id/text_production_companies"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/not_available_placeholder" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/material_default_spacing"
        android:text="Cast"
        android:textColor="@android:color/darker_gray" />
</LinearLayout>
